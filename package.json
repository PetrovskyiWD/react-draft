{
    "name": "react-draft",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "react": "^16.4.1",
        "react-dom": "^16.4.1",
        "react-scripts": "1.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "precommit": "lint-staged",
        "format": "prettier --write \"src/**/*.js\""
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "lint-staged": {
        "src/**/*.{js,jsx}": [
            "node_modules/.bin/eslint --fix --max-warnings=0",
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "eslint-config-prettier": "^3.1.0",
        "eslint-plugin-prettier": "^3.0.0",
        "husky": "^1.1.2",
        "lint-staged": "^7.3.0",
        "prettier": "^1.14.3"
    }
}
